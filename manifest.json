{
    "manifest_version": 2,
    "name": "Байрон!",
    "description": "Beautiful poetic lines of Romantic movement instead of platitudinous
titles of Russian local news website NGS.RU",
    "version": "1.0",

    "permissions": [
//	"tabs",
	"storage",
	"http://ngs.ru/",
	"http://ngs24.ru/",
	"http://news.ngs.ru/",
	"http://news.ngs24.ru/",
	"http://www.ngs.ru/",
	"http://www.ngs24.ru/",
	"http://www.news.ngs.ru/",
	"http://www.news.ngs24.ru/",
	"http://relax.ngs.ru/",
	"http://he.ngs.ru/",
	"http://she.ngs.ru/",
	"http://business.ngs.ru/",
	"http://www.relax.ngs.ru/",
	"http://www.he.ngs.ru/",
	"http://www.she.ngs.ru/",
	"http://www.business.ngs.ru/"
    ],

    "icons": {
	"16": "images/byron-extension-16.png",
	"48": "images/byron-extension-48.png",
	"128": "images/byron-extension-128.png"
    },

    "page_action": {
	"default_icon": "images/byron-extension-19.png",
	"default_title" : "Байрон!"
    },

    "background": {
	"scripts": ["background.js"]
    },

    "content_scripts": [
	{
	    "matches": [
		"http://ngs.ru/",
		"http://news.ngs.ru/*",
		"http://ngs24.ru/",
		"http://news.ngs24.ru/*",
		"http://www.ngs.ru/",
		"http://www.ngs24.ru/",
		"http://www.news.ngs.ru/",
		"http://www.news.ngs24.ru/",
		"http://relax.ngs.ru/*",
		"http://he.ngs.ru/*",
		"http://she.ngs.ru/*",
		"http://business.ngs.ru/*",
		"http://www.relax.ngs.ru/*",
		"http://www.he.ngs.ru/*",
		"http://www.she.ngs.ru/*",
		"http://www.business.ngs.ru/*"
	    ],
	    "js": ["jquery.js", "replacer.js"]
	}
    ],
    
    "web_accessible_resources": [
	"titles.txt"
    ],
    
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}